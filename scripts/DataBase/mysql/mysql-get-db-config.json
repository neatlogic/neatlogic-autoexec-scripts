{
    "opType": "target",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": null,
    "useLibName": ["DataBase/mysql/MysqlConfParser.pm"],
    "description": "在某个Mysql节点执行, 获取Mysql配置信息",
    "option": [{
            "opt": "OS_USER",
            "name": "运行用户",
            "help": "运行Mysqld的OS用户",
            "type": "text",
            "defaultValue": "mysql",
            "required": "false",
            "validate": ""
        },
        {
            "opt": "PORT",
            "name": "监听端口",
            "help": "Mysql监听的TCP端口",
            "type": "text",
            "defaultValue": "3306",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [{
            "opt": "isRunning",
            "name": "是否运行中",
            "help": "Mysqld是否正在运行中",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "configFile",
            "name": "my.cnf文件路径",
            "help": "my.cnf文件的路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "server_id",
            "name": "server_id",
            "help": "Mysql主从复制标记不同实例的Server Id",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "server_uuid",
            "name": "server_uuid",
            "help": "Mysql库的UUID",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "datadir",
            "name": "数据目录",
            "help": "Mysql的数据目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvMountPoint",
            "name": "LV卷挂载点",
            "help": "Mysql的数据目录所在的挂载点目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "rel2MountPoint",
            "name": "相对挂载点目录",
            "help": "Mysql的数据目录相对挂载点的相对目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvName",
            "name": "lvmName",
            "help": "Mysql的数据目录所在LVM的LV名称",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvPath",
            "name": "lvmPath",
            "help": "Mysql的数据目录所在LVM的LV路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "vgName",
            "name": "vgName",
            "help": "Mysql的数据目录所在LVM的VG名称",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "socket",
            "name": "UnixDomainSocket",
            "help": "Mysql监听的Unix Domain Socket文件路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "log_slave_updates",
            "name": "log-slave-updates",
            "help": "是否把同步事务写入bin-log",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "relay_log",
            "name": "中继日志配置",
            "help": "Mysql中继日志存放路径或文件名",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "log_bin",
            "name": "log-bin",
            "help": "Mysql二进制日志文件名",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        }
    ]
}