{
    "opType": "target",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "bash",
    "description": "OracleDB安装执行root脚本(root用户执行)",
    "enabled": 1,
    "option": [{
            "opt": "CV_ASSUME_DISTID",
            "name": "对应OS版本",
            "help": "与OracleLinux对应的Linux版本, RedHat8及以上才需要设置",
            "type": "select",
            "dataSource": {
                "dataList": [{
                        "text": "自动",
                        "value": "AUTO"
                    },
                    {
                        "text": "OL7",
                        "value": "OL7"
                    },
                    {
                        "text": "OEL7.8",
                        "value": "OEL7.8"
                    },
                    {
                        "text": "OL8",
                        "value": "OL8"
                    },
                    {
                        "text": "OL9",
                        "value": "OL9"
                    }
                ],
                "dataType": "static"
            },
            "defaultValue": "AUTO",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "ORACLE_USER",
            "name": "ORACLE用户",
            "help": "Oracle DB软件安装用户, 默认是oracle",
            "type": "text",
            "defaultValue": "oracle",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "DEL_USER",
            "name": "删除用户",
            "help": "软件卸载后, 是否删除Oracle用户和相关的用户组",
            "type": "select",
            "dataSource": {
                "dataList": [{
                        "text": "是",
                        "value": "1"
                    },
                    {
                        "text": "否",
                        "value": "0"
                    }
                ],
                "dataType": "static"
            },
            "defaultValue": "0",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [{
        "opt": "oracleEnv",
        "name": "Oracle用户环境变量",
        "help": "Oracle用户的ORACLE开头的环境变量",
        "type": "textarea",
        "defaultValue": ""
    }]
}