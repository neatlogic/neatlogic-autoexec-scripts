{
    "opType": "target",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "bash",
    "defaultProfile": null,
    "description": "OracleRAC DB软件安装(在root用户下执行, 会su到oracle用户执行)",
    "option": [{
            "opt": "EXEC_ENV",
            "name": "变量设置",
            "help": "执行前的变量设（使用${}引用作业参数）",
            "type": "textarea",
            "defaultValue": "ORACLE_USER=${ORACLE_USER}\nUNIX_GROUP_NAME=${UNIX_GROUP_NAME}\nINVENTORY_LOCATION=${INVENTORY_LOCATION}\nORACLE_BASE=${ORACLE_BASE}\nORACLE_HOME=${ORACLE_HOME}\nGRID_BASE=${GRID_BASE}\nGRID_HOME=${GRID_HOME}\nOSDBA_GROUP=${OSDBA_GROUP}\nOSOPER_GROUP=${OSOPER_GROUP}\nOSBACKUPDBA_GROUP=${OSBACKUPDBA_GROUP}\nOSDGDBA_GROUP=${OSDGDBA_GROUP}\nOSKMDBA_GROUP=${OSKMDBA_GROUP}\nOSRACDBA_GROUP=${OSRACDBA_GROUP}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "CV_ASSUME_DISTID",
            "name": "对应OS版本",
            "help": "与OracleLinux对应的Linux版本, RedHat8及以上才需要设置",
            "type": "select",
            "dataSource": {
                "dataList": [{
                        "text": "自动",
                        "value": "AUTO"
                    },
                    {
                        "text": "OL7",
                        "value": "OL7"
                    },
                    {
                        "text": "OEL7.8",
                        "value": "OEL7.8"
                    },
                    {
                        "text": "OL8",
                        "value": "OL8"
                    },
                    {
                        "text": "OL9",
                        "value": "OL9"
                    }
                ],
                "dataType": "static"
            },
            "defaultValue": "AUTO",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "INSTALLER_DIR",
            "name": "安装脚本目录",
            "help": "runInstaller脚本目录, 19C及以上版本, 解压在ORACLE_HOME下, 其他版本在解压目录的database子目录下",
            "type": "file",
            "defaultValue": "${ORACLE_HOME}",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "RESPONSE_FILE",
            "name": "静默响应文件",
            "help": "静默安装的响应文件",
            "type": "file",
            "defaultValue": null,
            "required": "true",
            "validate": ""
        },
        {
            "opt": "CLUSTER_NODES",
            "name": "安装节点",
            "help": "安装节点列表(genhossconf工具输出参数dbClusterNodes), 例如: rac1,rac2",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        }
    ],
    "output": []
}