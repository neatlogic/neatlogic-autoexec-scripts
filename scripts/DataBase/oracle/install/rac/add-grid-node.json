                    {
                        "text": "OEL7.8",
                        "value": "OEL7.8"
                    },
                    {
                        "text": "OL8",
                        "value": "OL8"
                    },
                    {
                        "text": "OL9",
                        "value": "OL9"
                    }
                ],
                "dataType": "static"
            },
            "defaultValue": "AUTO",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "GRID_USER",
