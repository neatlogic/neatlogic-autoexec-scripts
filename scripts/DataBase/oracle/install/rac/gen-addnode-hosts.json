{
    "opType": "runner",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "python",
    "defaultProfile": null,
    "description": "根据增加节点的IP信息, 生成RAC节点需要的/etc/hosts文件相关配置信息",
    "option": [{
            "opt": "racname",
            "name": "RAC名",
            "help": "作为节点命名的前缀, 节点名称: RAC名+序号, 留空则自动计算",
            "type": "text",
            "defaultValue": "",
            "required": "false",
            "validate": ""
        },
        {
            "opt": "pubnet",
            "name": "Public网段",
            "help": "Public网段定义, 例如: 10.10.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "privnet",
            "name": "Private网段",
            "help": "Private网段定义, 例如: 192.168.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "viplist",
            "name": "VIP列表",
            "help": "VIP列表, 一个IP一行, 数量跟节点数要一致",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "oldhosts",
            "name": "当前集群的hosts配置",
            "help": "当前集群的/etc/hosts文件内容",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "nodesipinfo",
            "name": "节点IP信息",
            "help": "getallnicip工具输出的IP信息",
            "type": "json",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [{
            "opt": "newNodesIp2HostName",
            "name": "新增节点IP到主机名映射",
            "help": "public网卡IP到主机名的映射(仅包括新增节点)",
            "type": "json",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "hostsConfTxt",
            "name": "hosts配置内容",
            "help": "/etc/hosts配置内容(包括集群所有节点配置)",
            "type": "textarea",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "newDbClusterNodes",
            "name": "DB新增节点名配置",
            "help": "DB集群节点名配置, 用于Oracle DB的静默安装配置(仅包括新增节点)",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "newGridClusterNodes",
            "name": "Grid新增节点名配置",
            "help": "Grid集群节点名配置, 用于Orcle grid的静默安装配置(仅包括新增节点)",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "networkInterfaceList",
            "name": "节点网卡配置",
            "help": "节点网卡配置, 用于Grid的静默安装配置",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        }
    ]
