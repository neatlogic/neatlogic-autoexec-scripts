{
    "opType": "runner",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "python",
    "defaultProfile": null,
    "description": "根据增加节点的IP信息, 生成RAC节点需要的/etc/hosts文件相关配置信息",
    "option": [
        {
            "opt": "crsname",
            "name": "集群名",
            "help": "作为节点命名的前缀, 节点名称: 集群名+序号, 留空则自动计算",
            "type": "text",
            "defaultValue": "",
            "required": "false",
            "validate": ""
        },
        {
            "opt": "pubnet",
            "name": "Public网段",
            "help": "Public网段定义, 例如: 10.10.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "privnet",
            "name": "Private网段",
            "help": "Private网段定义, 例如: 192.168.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "viplist",
            "name": "VIP列表",
            "help": "VIP列表, 一个IP一行, 数量跟节点数要一致",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "newnodesipinfo",
            "name": "新增节点IP信息",
            "help": "getallnicip工具输出的IP信息",
            "type": "json",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "gridnodesipinfo",
            "name": "原集群节点名与IP信息",
            "help": "get-rac-config工具输出的节点名与IP对照的信息, 例如: {\"rac1\":\"10.10.10.1\",\"rac2\":\"10.10.10.2\"}",
            "type": "json",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "oldhosts",
            "name": "当前集群的hosts配置",
            "help": "当前集群的/etc/hosts文件内容",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [
        {
            "opt": "gridClusterExecNodes",
            "name": "Grid集群执行节点",
            "help": "自动采集计算得到的现有集群执行节点(不包括新增节点)",
            "type": "node",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "newGridExecNodes",
            "name": "新增的Grid集群执行节点",
            "help": "自动采集计算得到的准备新增的集群执行节点",
            "type": "node",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "allExecNodes",
            "name": "Grid集群新老执行节点",
            "help": "自动采集计算得到的准备新增的加上原有的集群执行节点",
            "type": "node",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "newNodesIp2HostName",
            "name": "新增节点IP到主机名映射",
            "help": "public网卡IP到主机名的映射(仅包括新增节点)",
            "type": "json",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "hostsConfTxt",
            "name": "hosts配置内容",
            "help": "/etc/hosts配置内容(包括集群所有节点配置)",
            "type": "textarea",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "newDbClusterNodes",
            "name": "DB新增节点名配置",
            "help": "DB集群节点名配置, 用于Oracle DB的静默安装配置(仅包括新增节点)",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "newGridClusterNodes",
            "name": "Grid新增节点名配置",
            "help": "Grid集群节点名配置, 用于Orcle grid的静默安装配置(仅包括新增节点)",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        },
        {
            "opt": "networkInterfaceList",
            "name": "节点网卡配置",
            "help": "节点网卡配置, 用于Grid的静默安装配置",
            "type": "text",
            "defaultValue": "",
            "required": "false"
        }
    ]
}