{
    "opType": "runner",
    "typeName": "BASIC",
    "riskName": "LOW",
    "interpreter": "python",
    "description": "根据getallnicip工具输出的IP信息, 生成RAC节点需要的/etc/hosts文件配置信息",
    "option": [{
            "opt": "racname",
            "name": "RAC名",
            "help": "作为节点命名的前缀, 节点名称: RAC名+序号",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "pubnet",
            "name": "Public网段",
            "help": "Public网段定义, 例如: 10.10.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "privnet",
            "name": "Private网段",
            "help": "Private网段定义, 例如: 192.168.10.0/24",
            "type": "text",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "viplist",
            "name": "VIP列表",
            "help": "VIP列表, 一个IP一行, 数量跟节点数要一致",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "scaniplist",
            "name": "ScanIP列表",
            "help": "SCAN IP列表, 一个IP一行, 一到三个IP",
            "type": "textarea",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        },
        {
            "opt": "nodesipinfo",
            "name": "节点IP信息",
            "help": "getallnicip工具输出的IP信息",
            "type": "json",
            "defaultValue": "",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [{
        "opt": "hostsConfTxt",
        "name": "hosts配置内容",
        "help": "/etc/hosts配置内容",
        "type": "text",
        "defaultValue": ""
    }]
}