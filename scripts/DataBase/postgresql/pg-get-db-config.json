{
    "opType": "target",
    "typeName": "INSTALL",
    "riskName": "LOW",
    "interpreter": "perl",
    "defaultProfile": null,
    "useLibName": ["DataBase/mysql/PostgresqlConfParser.pm"],
    "description": "在某个Postgresql节点执行, 获取Postgresql配置信息",
    "option": [{
            "opt": "OS_USER",
            "name": "运行用户",
            "help": "运行Postgresqld的OS用户",
            "type": "text",
            "defaultValue": "mysql",
            "required": "false",
            "validate": ""
        },
        {
            "opt": "PORT",
            "name": "监听端口",
            "help": "Postgresql监听的TCP端口",
            "type": "text",
            "defaultValue": "3306",
            "required": "true",
            "validate": ""
        }
    ],
    "output": [{
            "opt": "isRunning",
            "name": "是否运行中",
            "help": "Postgresqld是否正在运行中",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "DATADIR",
            "name": "数据目录",
            "help": "Postgresql的数据目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "pgHbaConfPath",
            "name": "HBA配置文件路径",
            "help": "配置文件pg_hba.conf全路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "pgIdentityConfPath",
            "name": "Identity配置文件路径",
            "help": "配置文件pg_ident.conf全路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvMountPoint",
            "name": "LV卷挂载点",
            "help": "Postgresql的数据目录所在的挂载点目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "rel2MountPoint",
            "name": "相对挂载点目录",
            "help": "Postgresql的数据目录相对挂载点的相对目录",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvName",
            "name": "lvmName",
            "help": "Postgresql的数据目录所在LVM的LV名称",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "lvPath",
            "name": "lvmPath",
            "help": "Postgresql的数据目录所在LVM的LV路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "vgName",
            "name": "vgName",
            "help": "Postgresql的数据目录所在LVM的VG名称",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        },
        {
            "opt": "SOCKET_LOCATION",
            "name": "UnixDomainSocket",
            "help": "Postgresql监听的Unix Domain Socket文件路径",
            "type": "text",
            "defaultValue": null,
            "required": "false"
        }
    ]
}